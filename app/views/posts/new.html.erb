<% provide(:title, 'New Post') %>
<h1>New Post</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@post) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :title %>
      <p>
      <%= f.text_field :title %>
      <p>
      <%= f.label :message %>
      <p>
      <%= f.text_area :message %>
      <p>
      <%= f.submit "Create new post", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
<p>
<%= link_to 'Back', posts_path %>